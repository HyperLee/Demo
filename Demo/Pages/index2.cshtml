@page
@model Demo.Pages.index2Model
@{
    ViewData["Title"] = "多時區電子時鐘 - P2增強版";
}

<style>
    /* === 多時區時鐘深色模式樣式 === */
    [data-bs-theme="dark"] .top-toolbar {
        background-color: var(--navbar-bg);
        border-bottom: 1px solid var(--border-color);
    }

    [data-bs-theme="dark"] .app-title {
        color: var(--bs-body-color);
    }

    [data-bs-theme="dark"] .timezone-dropdown {
        background-color: var(--input-bg);
        border-color: var(--input-border);
        color: var(--bs-body-color);
    }

    [data-bs-theme="dark"] .control-btn {
        background-color: var(--surface-variant);
        border-color: var(--border-color);
        color: var(--bs-body-color);
    }

    [data-bs-theme="dark"] .control-btn:hover {
        background-color: var(--bs-primary);
        color: white;
    }

    [data-bs-theme="dark"] .settings-panel {
        background-color: var(--modal-bg);
        border: 1px solid var(--border-color);
        box-shadow: 0 8px 32px var(--shadow-color);
    }

    [data-bs-theme="dark"] .settings-header {
        background-color: var(--surface-variant);
        border-bottom: 1px solid var(--border-color);
        color: var(--bs-body-color);
    }

    [data-bs-theme="dark"] .settings-close {
        color: var(--bs-body-color);
    }

    [data-bs-theme="dark"] .settings-close:hover {
        color: var(--bs-danger);
    }

    [data-bs-theme="dark"] .digital-display {
        background-color: var(--surface-color);
        border: 1px solid var(--border-color);
        color: var(--bs-primary);
        text-shadow: 0 0 20px rgba(110, 168, 254, 0.5);
    }

    [data-bs-theme="dark"] .timezone-clock {
        background-color: var(--card-bg);
        border: 1px solid var(--border-color);
        box-shadow: 0 4px 16px var(--shadow-color);
    }

    [data-bs-theme="dark"] .timezone-clock:hover {
        box-shadow: 0 8px 24px var(--shadow-color);
        transform: translateY(-2px);
    }

    [data-bs-theme="dark"] .timezone-label {
        color: var(--text-muted);
    }

    [data-bs-theme="dark"] .timezone-time {
        color: var(--bs-body-color);
    }

    [data-bs-theme="dark"] .analog-clock-face {
        background: radial-gradient(circle, var(--surface-variant) 0%, var(--surface-color) 100%);
        border: 3px solid var(--border-color);
    }

    [data-bs-theme="dark"] .hour-hand,
    [data-bs-theme="dark"] .minute-hand {
        background: var(--bs-body-color);
    }

    [data-bs-theme="dark"] .second-hand {
        background: var(--bs-primary);
    }

    [data-bs-theme="dark"] .clock-numbers {
        color: var(--bs-body-color);
    }

    [data-bs-theme="dark"] .clock-center {
        background: var(--bs-primary);
        box-shadow: 0 0 10px rgba(110, 168, 254, 0.7);
    }
</style>

<!-- 頂部工具列 -->
<div class="top-toolbar">
    <div class="toolbar-left">
        <h1 class="app-title" data-i18n="common.appTitle">華麗時鐘</h1>
    </div>
    <div class="toolbar-right">
        <!-- 時區選擇器 -->
        <div class="timezone-selector">
            <label for="timezone-select" data-i18n="timezone.label">時區設定</label>
            <select id="timezone-select" class="timezone-dropdown" data-i18n-placeholder="timezone.placeholder">
                <option value="">選擇時區...</option>
            </select>
        </div>
        
        <!-- 控制按鈕群組 -->
        <div class="control-buttons">
            <!-- 語言切換 -->
            <button id="language-toggle" class="control-btn" title="語言切換" aria-label="切換語言">
                <span class="icon">🌐</span>
            </button>
            
            <!-- 主題切換 -->
            <button id="theme-toggle" class="control-btn" title="主題切換" aria-label="切換深色/淺色模式">
                <span class="icon theme-icon">🌙</span>
            </button>
            
            <!-- 設定面板 -->
            <button id="settings-toggle" class="control-btn" title="設定" aria-label="開啟設定面板">
                <span class="icon">⚙️</span>
            </button>
        </div>
    </div>
</div>



<!-- 設定面板 -->
<div id="settings-panel" class="settings-panel" style="display: none;" aria-hidden="true">
    <div class="settings-content">
        <div class="settings-header">
            <h3 data-i18n="common.settings">設定</h3>
            <button class="settings-close" aria-label="關閉設定面板">&times;</button>
        </div>
        <div class="settings-body">
            <!-- 時間格式設定 -->
            <div class="setting-section">
                <h4 data-i18n="format.timeFormat">時間格式</h4>
                
                <div class="setting-group">
                    <label class="toggle-switch">
                        <input type="checkbox" id="use24hour" checked>
                        <span class="slider"></span>
                        <span class="label" data-i18n="format.use24Hour">24小時制</span>
                    </label>
                </div>
                
                <div class="setting-group">
                    <label class="toggle-switch">
                        <input type="checkbox" id="showSeconds" checked>
                        <span class="slider"></span>
                        <span class="label" data-i18n="format.showSeconds">顯示秒數</span>
                    </label>
                </div>
                
                <div class="setting-group">
                    <label for="timeFormatSelect" data-i18n="format.timeFormat">時間格式：</label>
                    <select id="timeFormatSelect" class="format-select">
                        <option value="HH:MM:SS">HH:MM:SS</option>
                    </select>
                </div>
            </div>

            <!-- 日期格式設定 -->
            <div class="setting-section">
                <h4 data-i18n="format.dateFormat">日期格式</h4>
                
                <div class="setting-group">
                    <label class="toggle-switch">
                        <input type="checkbox" id="showDate" checked>
                        <span class="slider"></span>
                        <span class="label" data-i18n="format.showDate">顯示日期</span>
                    </label>
                </div>
                
                <div class="setting-group">
                    <label class="toggle-switch">
                        <input type="checkbox" id="showWeekday">
                        <span class="slider"></span>
                        <span class="label" data-i18n="format.showWeekday">顯示星期</span>
                    </label>
                </div>
                
                <div class="setting-group">
                    <label for="dateFormatSelect" data-i18n="format.dateFormat">日期格式：</label>
                    <select id="dateFormatSelect" class="format-select">
                        <option value="YYYY/MM/DD">YYYY/MM/DD</option>
                    </select>
                </div>
            </div>

            <!-- 主題設定 -->
            <div class="setting-section">
                <h4 data-i18n="theme.title">主題設定</h4>
                
                <div class="setting-group radio-group">
                    <label class="radio-option">
                        <input type="radio" name="themeMode" value="light">
                        <span class="radio-mark"></span>
                        <span class="label" data-i18n="theme.lightMode">淺色模式</span>
                    </label>
                    <label class="radio-option">
                        <input type="radio" name="themeMode" value="dark">
                        <span class="radio-mark"></span>
                        <span class="label" data-i18n="theme.darkMode">深色模式</span>
                    </label>
                    <label class="radio-option">
                        <input type="radio" name="themeMode" value="auto" checked>
                        <span class="radio-mark"></span>
                        <span class="label" data-i18n="theme.auto">跟隨系統</span>
                    </label>
                </div>
            </div>

            <!-- 預覽區域 -->
            <div class="setting-section">
                <h4 data-i18n="common.preview">即時預覽</h4>
                <div class="preview-container">
                    <div id="preview-time" class="preview-time">00:00:00</div>
                    <div id="preview-date" class="preview-date">0000/00/00</div>
                </div>
            </div>
        </div>
        <div class="settings-footer">
            <button id="resetSettings" class="btn-secondary" data-i18n="common.reset">重設</button>
            <button id="saveSettings" class="btn-primary" data-i18n="common.save">儲存</button>
        </div>
    </div>
</div>

<!-- 語言選擇面板 -->
<div id="language-panel" class="language-panel" style="display: none;" aria-hidden="true">
    <div class="language-options">
        <div class="language-option" data-lang="zh-TW">
            <span class="flag">🇹🇼</span>
            <span class="name">繁體中文</span>
        </div>
        <div class="language-option" data-lang="zh-CN">
            <span class="flag">🇨🇳</span>
            <span class="name">简体中文</span>
        </div>
        <div class="language-option" data-lang="en-US">
            <span class="flag">🇺🇸</span>
            <span class="name">English</span>
        </div>
        <div class="language-option" data-lang="ja-JP">
            <span class="flag">🇯🇵</span>
            <span class="name">日本語</span>
        </div>
    </div>
</div>

<div class="clock-container flex-center" style="min-height: 80vh; justify-content: center; position: relative;">
    <!-- 載入覆蓋層 -->
    <div id="loading-overlay" class="loading-overlay">
        <div class="loading-spinner"></div>
        <div class="loading-text">載入時區資料...</div>
        <div class="progress-bar">
            <div id="progress-bar-fill" class="progress-bar-fill"></div>
        </div>
    </div>
    
    <!-- 主要內容 -->
    <div class="local-clock large-clock clickable-clock" 
         data-tz="local" 
         tabindex="0" 
         role="button" 
         aria-label="點擊查看本地時間詳細資訊，當前時間會即時更新">
        <div class="clock-label">本地時間</div>
        <div id="local-time" class="clock-time">00:00:00</div>
        <div id="local-date" class="clock-date">0000:00:00</div>
    </div>
    <div class="timezone-footer">
        <div class="timezone-row small-row">
            <div class="timezone-clock small-clock clickable-clock" 
                 data-tz="America/New_York"
                 tabindex="0" 
                 role="button" 
                 aria-label="點擊查看紐約時區詳細資訊，美東時間即時更新">
                <div class="tz-city">紐約</div>
                <div class="clock-time" id="ny-time">00:00:00</div>
                <div class="clock-date" id="ny-date">0000:00:00</div>
            </div>
            <div class="timezone-clock small-clock clickable-clock" 
                 data-tz="Europe/London"
                 tabindex="0" 
                 role="button" 
                 aria-label="點擊查看倫敦時區詳細資訊，格林威治時間即時更新">
                <div class="tz-city">倫敦</div>
                <div class="clock-time" id="ldn-time">00:00:00</div>
                <div class="clock-date" id="ldn-date">0000:00:00</div>
            </div>
            <div class="timezone-clock small-clock clickable-clock" 
                 data-tz="Asia/Tokyo"
                 tabindex="0" 
                 role="button" 
                 aria-label="點擊查看東京時區詳細資訊，日本標準時間即時更新">
                <div class="tz-city">東京</div>
                <div class="clock-time" id="tokyo-time">00:00:00</div>
                <div class="clock-date" id="tokyo-date">0000:00:00</div>
            </div>
            <div class="timezone-clock small-clock clickable-clock" 
                 data-tz="Asia/Riyadh"
                 tabindex="0" 
                 role="button" 
                 aria-label="點擊查看沙烏地阿拉伯時區詳細資訊，阿拉伯標準時間即時更新">
                <div class="tz-city">沙烏地阿拉伯</div>
                <div class="clock-time" id="riyadh-time">00:00:00</div>
                <div class="clock-date" id="riyadh-date">0000:00:00</div>
            </div>
            <!-- 可擴充更多時區 -->
        </div>
        <div id="clock-error" class="clock-error" style="display:none;"></div>
    </div>
</div>

<!-- 燈箱結構 -->
<div id="timezone-modal" class="modal-overlay" style="display: none;" aria-hidden="true">
    <div class="modal-content" role="dialog" aria-labelledby="modal-title" aria-describedby="modal-description">
        <div class="modal-header">
            <h3 id="modal-title" class="modal-title">時區詳細資訊</h3>
            <div class="modal-controls">
                <button id="sound-toggle" class="sound-toggle-btn" type="button" 
                        tabindex="0" aria-label="切換音效" title="切換音效開關">
                    <span class="sound-icon">🔊</span>
                </button>
                <button class="modal-close" type="button" 
                        tabindex="0" aria-label="關閉燈箱">&times;</button>
            </div>
        </div>
        <div class="modal-body">
            <div class="timezone-info">
                <div class="timezone-name">
                    <span class="label">時區名稱：</span>
                    <span id="modal-timezone" class="value">-</span>
                </div>
                <div class="city-name">
                    <span class="label">城市：</span>
                    <span id="modal-city" class="value">-</span>
                </div>
                <div class="current-time">
                    <span class="label">當前時間：</span>
                    <span id="modal-time" class="value time-display">0000/00/00 00:00:00</span>
                </div>
                <div class="time-offset">
                    <span class="label">與本地時差：</span>
                    <span id="modal-offset" class="value offset-display">+0</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 音效檔案預載 -->
<audio id="modal-open-sound" preload="auto" style="display: none;">
    <source src="~/sounds/modal-open.mp3" type="audio/mpeg">
    <source src="~/sounds/modal-open.ogg" type="audio/ogg">
</audio>
<audio id="modal-close-sound" preload="auto" style="display: none;">
    <source src="~/sounds/modal-close.mp3" type="audio/mpeg">
    <source src="~/sounds/modal-close.ogg" type="audio/ogg">
</audio>

