@page
@model Demo.Pages.index2Model
@{
    ViewData["Title"] = "多時區電子時鐘";
}



<div class="clock-container flex-center" style="min-height: 80vh; justify-content: center;">
    <div class="local-clock large-clock">
        <div class="clock-label">本地時間</div>
        <div id="local-time" class="clock-time">00:00:00</div>
        <div id="local-date" class="clock-date">0000:00:00</div>
    </div>
    <div class="timezone-footer">
        <div class="timezone-row small-row">
            <div class="timezone-clock small-clock clickable-clock" data-tz="America/New_York">
                <div class="tz-city">紐約</div>
                <div class="clock-time" id="ny-time">00:00:00</div>
                <div class="clock-date" id="ny-date">0000:00:00</div>
            </div>
            <div class="timezone-clock small-clock clickable-clock" data-tz="Europe/London">
                <div class="tz-city">倫敦</div>
                <div class="clock-time" id="ldn-time">00:00:00</div>
                <div class="clock-date" id="ldn-date">0000:00:00</div>
            </div>
            <div class="timezone-clock small-clock clickable-clock" data-tz="Asia/Tokyo">
                <div class="tz-city">東京</div>
                <div class="clock-time" id="tokyo-time">00:00:00</div>
                <div class="clock-date" id="tokyo-date">0000:00:00</div>
            </div>
            <div class="timezone-clock small-clock clickable-clock" data-tz="Asia/Riyadh">
                <div class="tz-city">沙烏地阿拉伯</div>
                <div class="clock-time" id="riyadh-time">00:00:00</div>
                <div class="clock-date" id="riyadh-date">0000:00:00</div>
            </div>
            <!-- 可擴充更多時區 -->
        </div>
        <div id="clock-error" class="clock-error" style="display:none;"></div>
    </div>
</div>

<!-- 燈箱結構 -->
<div id="timezone-modal" class="modal-overlay" style="display: none;" aria-hidden="true">
    <div class="modal-content" role="dialog" aria-labelledby="modal-title" aria-describedby="modal-description">
        <div class="modal-header">
            <h3 id="modal-title" class="modal-title">時區詳細資訊</h3>
            <button class="modal-close" type="button" aria-label="關閉燈箱">&times;</button>
        </div>
        <div class="modal-body">
            <div class="timezone-info">
                <div class="timezone-name">
                    <span class="label">時區名稱：</span>
                    <span id="modal-timezone" class="value">-</span>
                </div>
                <div class="city-name">
                    <span class="label">城市：</span>
                    <span id="modal-city" class="value">-</span>
                </div>
                <div class="current-time">
                    <span class="label">當前時間：</span>
                    <span id="modal-time" class="value time-display">0000/00/00 00:00:00</span>
                </div>
                <div class="time-offset">
                    <span class="label">與本地時差：</span>
                    <span id="modal-offset" class="value offset-display">+0</span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/clock.css" />
}
<style>
    .flex-center {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 80vh;
    }
    .timezone-row {
        display: flex;
        flex-direction: row;
        align-items: flex-end;
        justify-content: center;
        gap: 2rem;
        width: 100%;
        margin-top: 2rem;
    }
    .small-row {
        gap: 1.2rem;
    }
    .small-clock {
        flex: 0 0 120px;
        max-width: 140px;
        min-width: 90px;
        padding: 0.7rem 0.5rem;
        background: #f8f9fa;
        border-radius: 0.7rem;
        box-shadow: 0 0 6px #ccc;
        font-size: 1rem;
        text-align: center;
        margin: 0 0.5rem;
    }
    .small-clock .clock-label {
        font-size: 1rem;
        font-weight: bold;
        margin-bottom: 0.3rem;
    }
    .small-clock .clock-time {
        font-size: 1.2rem;
        font-weight: bold;
        margin-bottom: 0.2rem;
    }
    .small-clock .clock-date {
        font-size: 0.9rem;
        color: #888;
    }
    .large-clock {
        flex: 0 0 350px;
        max-width: 400px;
        min-width: 300px;
        padding: 2rem 1.5rem;
        background: #fffbe6;
        border-radius: 1.5rem;
        box-shadow: 0 0 16px #ffe06699;
        font-size: 2.5rem;
        text-align: center;
        margin: 0 auto 2rem auto;
        /* 置中 */
        align-self: center;
    }
    .large-clock .clock-label {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 1rem;
    }
    .large-clock .clock-time {
        font-size: 3.5rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
    }
    .large-clock .clock-date {
        font-size: 1.5rem;
        color: #888;
    }
</style>
@section Scripts {
    <script src="~/js/clock.js"></script>
}
