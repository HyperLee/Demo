<style>
    /* CSS 變數系統 - 淺色模式（預設） */
    :root {
        /* 背景顏色 */
        --bg-primary: #ffffff;
        --bg-secondary: #f8fafc;
        --bg-card: #ffffff;
        --bg-overlay: rgba(0, 0, 0, 0.5);
        
        /* 文字顏色 */
        --text-primary: #0f172a;
        --text-secondary: #64748b;
        --text-accent: #22d3ee;
        --text-light: #94a3b8;
        
        /* 時鐘顏色 */
        --clock-bg: #f8fafc;
        --clock-border: #e2e8f0;
        --clock-numbers: #374151;
        --clock-hands: #1f2937;
        --clock-highlight: #fffbe6;
        --clock-shadow: #ffe06699;
        
        /* 數位時鐘 */
        --digital-bg: #18181b;
        --digital-text: #22d3ee;
        
        /* 按鈕與控制項 */
        --btn-bg: #f1f5f9;
        --btn-hover: #e2e8f0;
        --btn-active: #cbd5e1;
        --btn-primary: #3b82f6;
        --btn-primary-hover: #2563eb;
        
        /* 邊框與陰影 */
        --border-color: #e2e8f0;
        --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.05);
        --shadow-md: 0 4px 6px rgba(0, 0, 0, 0.1);
        --shadow-lg: 0 10px 15px rgba(0, 0, 0, 0.1);
        
        /* 動畫過渡 */
        --transition-fast: 0.15s ease;
        --transition-normal: 0.3s ease;
        --transition-slow: 0.5s ease;
    }
    
    /* 深色模式 */
    :root[data-theme="dark"] {
        /* 背景顏色 */
        --bg-primary: #0f172a;
        --bg-secondary: #1e293b;
        --bg-card: #334155;
        --bg-overlay: rgba(0, 0, 0, 0.7);
        
        /* 文字顏色 */
        --text-primary: #f1f5f9;
        --text-secondary: #94a3b8;
        --text-accent: #22d3ee;
        --text-light: #64748b;
        
        /* 時鐘顏色 */
        --clock-bg: #1e293b;
        --clock-border: #475569;
        --clock-numbers: #e2e8f0;
        --clock-hands: #f1f5f9;
        --clock-highlight: #334155;
        --clock-shadow: rgba(34, 211, 238, 0.3);
        
        /* 數位時鐘 */
        --digital-bg: #000000;
        --digital-text: #22d3ee;
        
        /* 按鈕與控制項 */
        --btn-bg: #475569;
        --btn-hover: #64748b;
        --btn-active: #94a3b8;
        --btn-primary: #3b82f6;
        --btn-primary-hover: #2563eb;
        
        /* 邊框與陰影 */
        --border-color: #475569;
        --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.2);
        --shadow-md: 0 4px 6px rgba(0, 0, 0, 0.3);
        --shadow-lg: 0 10px 15px rgba(0, 0, 0, 0.4);
    }

    /* 全域基礎樣式 */
    * {
        transition: background-color var(--transition-normal), 
                    color var(--transition-normal), 
                    border-color var(--transition-normal);
    }

    body {
        background: var(--bg-primary);
        color: var(--text-primary);
    }

    /* 頂部工具列 */
    .top-toolbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 2rem;
        background: var(--bg-secondary);
        border-bottom: 1px solid var(--border-color);
        box-shadow: var(--shadow-sm);
    }

    .app-title {
        font-size: 1.5rem;
        font-weight: bold;
        color: var(--text-primary);
        margin: 0;
    }

    .toolbar-right {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .timezone-selector {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .timezone-selector label {
        font-size: 0.875rem;
        color: var(--text-secondary);
    }

    .timezone-dropdown {
        padding: 0.5rem;
        border: 1px solid var(--border-color);
        border-radius: 0.375rem;
        background: var(--bg-card);
        color: var(--text-primary);
        min-width: 200px;
    }

    .control-buttons {
        display: flex;
        gap: 0.5rem;
    }

    .control-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 2.5rem;
        height: 2.5rem;
        background: var(--btn-bg);
        border: 1px solid var(--border-color);
        border-radius: 0.5rem;
        cursor: pointer;
        transition: all var(--transition-fast);
    }

    .control-btn:hover {
        background: var(--btn-hover);
        transform: translateY(-1px);
        box-shadow: var(--shadow-md);
    }

    .control-btn .icon {
        font-size: 1.25rem;
    }

    /* 設定面板 */
    .settings-panel {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: var(--bg-overlay);
        z-index: 1000;
        display: flex;
        align-items: center;
        justify-content: center;
        backdrop-filter: blur(4px);
    }

    .settings-content {
        background: var(--bg-card);
        border-radius: 1rem;
        box-shadow: var(--shadow-lg);
        max-width: 500px;
        width: 90%;
        max-height: 80vh;
        overflow-y: auto;
    }

    .settings-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.5rem;
        border-bottom: 1px solid var(--border-color);
    }

    .settings-header h3 {
        margin: 0;
        color: var(--text-primary);
    }

    .settings-close {
        background: none;
        border: none;
        font-size: 1.5rem;
        cursor: pointer;
        color: var(--text-secondary);
        padding: 0.25rem;
        border-radius: 0.25rem;
        transition: all var(--transition-fast);
    }

    .settings-close:hover {
        background: var(--btn-hover);
        color: var(--text-primary);
    }

    .settings-body {
        padding: 1.5rem;
    }

    .setting-section {
        margin-bottom: 2rem;
    }

    .setting-section h4 {
        margin: 0 0 1rem 0;
        color: var(--text-primary);
        font-weight: 600;
    }

    .setting-group {
        margin-bottom: 1rem;
    }

    /* Toggle 開關 */
    .toggle-switch {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        cursor: pointer;
    }

    .toggle-switch input {
        opacity: 0;
        width: 0;
        height: 0;
    }

    .slider {
        position: relative;
        display: inline-block;
        width: 3rem;
        height: 1.5rem;
        background-color: var(--btn-bg);
        border-radius: 1.5rem;
        transition: var(--transition-fast);
    }

    .slider:before {
        position: absolute;
        content: "";
        height: 1.25rem;
        width: 1.25rem;
        left: 0.125rem;
        bottom: 0.125rem;
        background-color: white;
        border-radius: 50%;
        transition: var(--transition-fast);
    }

    input:checked + .slider {
        background-color: var(--btn-primary);
    }

    input:checked + .slider:before {
        transform: translateX(1.5rem);
    }

    /* 單選按鈕群組 */
    .radio-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .radio-option {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        cursor: pointer;
        padding: 0.5rem;
        border-radius: 0.375rem;
        transition: var(--transition-fast);
    }

    .radio-option:hover {
        background: var(--btn-bg);
    }

    .radio-option input {
        opacity: 0;
        width: 0;
        height: 0;
    }

    .radio-mark {
        width: 1.25rem;
        height: 1.25rem;
        border: 2px solid var(--border-color);
        border-radius: 50%;
        position: relative;
        transition: var(--transition-fast);
    }

    .radio-mark:after {
        content: "";
        position: absolute;
        top: 50%;
        left: 50%;
        width: 0.5rem;
        height: 0.5rem;
        border-radius: 50%;
        background: var(--btn-primary);
        transform: translate(-50%, -50%) scale(0);
        transition: var(--transition-fast);
    }

    input:checked + .radio-mark {
        border-color: var(--btn-primary);
    }

    input:checked + .radio-mark:after {
        transform: translate(-50%, -50%) scale(1);
    }

    /* 選擇框 */
    .format-select {
        width: 100%;
        padding: 0.5rem;
        border: 1px solid var(--border-color);
