<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Demo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Demo.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Demo</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">
                                <i class="fas fa-home me-1"></i><span class="d-md-inline d-none">首頁</span>
                            </a>
                        </li>
                        
                        <!-- 生產力工具 -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="productivityDropdown" role="button" 
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-tools me-1"></i><span class="d-lg-inline d-none">生產力</span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-page="/todo">
                                        <i class="fas fa-tasks me-2"></i>待辦清單
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-page="/habits">
                                        <i class="fas fa-calendar-check me-2"></i>習慣追蹤
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-page="/index3">
                                        <i class="fas fa-calendar me-2"></i>日曆
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-page="/index4">
                                        <i class="fas fa-sticky-note me-2"></i>備忘錄
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-page="/Index2">
                                        <i class="fas fa-clock me-2"></i>多時區時鐘
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-page="/index10">
                                        <i class="fas fa-globe me-2"></i>世界時鐘
                                    </a>
                                </li>
                            </ul>
                        </li>
                        
                        <!-- 財務管理 -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="financeDropdown" role="button" 
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-money-bill-wave me-1"></i><span class="d-lg-inline d-none">財務</span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-page="/index7">
                                        <i class="fas fa-book me-2"></i>記帳手冊
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-page="/index9">
                                        <i class="fas fa-chart-line me-2"></i>財務儀表板
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-page="/index6">
                                        <i class="fas fa-exchange-alt me-2"></i>匯率計算器
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li class="dropdown-header">投資追蹤</li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-page="/investment-portfolio">
                                        <i class="fas fa-folder me-2"></i>投資組合
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-page="/investment-holdings">
                                        <i class="fas fa-chart-bar me-2"></i>持倉管理
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-page="/investment-transactions">
                                        <i class="fas fa-history me-2"></i>交易記錄
                                    </a>
                                </li>
                            </ul>
                        </li>
                        
                        <!-- 家庭共享 -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="familyDropdown" role="button" 
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-users me-1"></i><span class="d-lg-inline d-none">家庭</span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-page="/family-management">
                                        <i class="fas fa-home me-2"></i>家庭管理
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-page="/family-accounting">
                                        <i class="fas fa-calculator me-2"></i>共享記帳
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                    
                    <!-- 右側區域 -->
                    <div class="navbar-nav ms-auto">
                        <!-- Privacy 連結 -->
                        <li class="nav-item me-2">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">
                                <i class="fas fa-shield-alt me-1"></i>
                                <span class="d-md-inline d-none">隱私權</span>
                            </a>
                        </li>
                        
                        <!-- 主題切換按鈕 -->
                        <div class="nav-item dropdown">
                            <button class="btn btn-link nav-link dropdown-toggle" type="button" 
                                    data-bs-toggle="dropdown" aria-expanded="false" id="themeDropdown">
                                <i class="fas fa-palette" id="themeIcon"></i>
                                <span class="d-md-inline d-none ms-1" id="themeLabel">主題</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <button class="dropdown-item" type="button" data-bs-theme-value="light">
                                        <i class="fas fa-sun me-2"></i>淺色模式
                                    </button>
                                </li>
                                <li>
                                    <button class="dropdown-item" type="button" data-bs-theme-value="dark">
                                        <i class="fas fa-moon me-2"></i>深色模式
                                    </button>
                                </li>
                                <li>
                                    <button class="dropdown-item" type="button" data-bs-theme-value="auto">
                                        <i class="fas fa-desktop me-2"></i>跟隨系統
                                    </button>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Demo - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
    <script src="~/js/theme-manager.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
