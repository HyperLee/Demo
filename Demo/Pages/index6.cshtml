@page
@model Demo.Pages.index6
@{
    ViewData["Title"] = "台幣與外幣匯率計算器";
}

<style>
    /* === 匯率計算器深色模式樣式 === */
    [data-bs-theme="dark"] .card {
        background-color: var(--card-bg);
        border-color: var(--border-color);
        box-shadow: 0 4px 16px var(--shadow-color);
    }

    [data-bs-theme="dark"] .bg-light {
        background-color: var(--surface-variant) !important;
    }

    [data-bs-theme="dark"] .border-info {
        border-color: var(--bs-info) !important;
    }

    [data-bs-theme="dark"] .text-primary {
        color: var(--bs-primary) !important;
    }

    [data-bs-theme="dark"] .text-success {
        color: var(--bs-success) !important;
    }

    [data-bs-theme="dark"] .text-warning {
        color: var(--bs-warning) !important;
    }

    [data-bs-theme="dark"] .text-danger {
        color: var(--bs-danger) !important;
    }

    [data-bs-theme="dark"] .form-control {
        background-color: var(--input-bg);
        border-color: var(--input-border);
        color: var(--bs-body-color);
    }

    [data-bs-theme="dark"] .form-select {
        background-color: var(--input-bg);
        border-color: var(--input-border);
        color: var(--bs-body-color);
    }

    [data-bs-theme="dark"] .badge {
        color: var(--bs-dark);
    }

    [data-bs-theme="dark"] .bg-warning {
        background-color: var(--bs-warning) !important;
        color: var(--bs-dark) !important;
    }

    [data-bs-theme="dark"] .alert-warning {
        background-color: rgba(255, 218, 106, 0.1);
        border-color: rgba(255, 218, 106, 0.2);
        color: var(--bs-warning);
    }

    [data-bs-theme="dark"] .alert-info {
        background-color: rgba(110, 239, 246, 0.1);
        border-color: rgba(110, 239, 246, 0.2);
        color: var(--bs-info);
    }

    [data-bs-theme="dark"] .btn-outline-success {
        color: var(--bs-success);
        border-color: var(--bs-success);
    }

    [data-bs-theme="dark"] .btn-outline-success:hover {
        background-color: var(--bs-success);
        border-color: var(--bs-success);
        color: white;
    }

    [data-bs-theme="dark"] .btn-outline-info {
        color: var(--bs-info);
        border-color: var(--bs-info);
    }

    [data-bs-theme="dark"] .btn-outline-info:hover {
        background-color: var(--bs-info);
        border-color: var(--bs-info);
        color: white;
    }

    [data-bs-theme="dark"] .table {
        --bs-table-bg: var(--table-bg);
        --bs-table-striped-bg: var(--table-striped);
        --bs-table-border-color: var(--border-color);
    }

    [data-bs-theme="dark"] .result-highlight {
        background-color: rgba(110, 168, 254, 0.1);
        border: 1px solid rgba(110, 168, 254, 0.3);
        color: var(--bs-primary);
    }
</style>

<div class="container mt-4">
    <!-- 頁面標題 -->
    <div class="row">
        <div class="col-12">
            <h2 class="text-center mb-4">
                <i class="fas fa-exchange-alt"></i> 台幣與外幣匯率計算器
            </h2>
        </div>
    </div>

    <!-- 日期資訊區域 -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-info">
                <div class="card-body bg-light">
                    <div class="row text-center">
                        <div class="col-md-6">
                            <h5 class="mb-2">
                                <i class="fas fa-calendar-day text-primary"></i> 
                                📅 今日日期: @Model.CurrentDate.ToString("yyyy年MM月dd日") (@Model.DayOfWeekChinese)
                            </h5>
                        </div>
                        <div class="col-md-6">
                            <h5 class="mb-2 @(Model.IsRateDataStale ? "text-warning" : "text-success")">
                                <i class="fas fa-chart-line"></i>
                                📈 匯率更新: 
                                @if (Model.LastUpdated.HasValue)
                                {
                                    @Model.LastUpdated.Value.ToString("yyyy-MM-dd HH:mm:ss")
                                    @if (Model.IsRateDataStale)
                                    {
                                        <span class="badge bg-warning text-dark ms-2">資料過期</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-danger">尚無資料</span>
                                }
                            </h5>
                        </div>
                    </div>
                    
                    @if (Model.IsRateDataStale)
                    {
                        <div class="alert alert-warning mb-0 mt-2" role="alert">
                            <i class="fas fa-exclamation-triangle"></i>
                            ⚠️ 注意：匯率資料已超過24小時未更新，建議點擊「更新匯率」取得最新資料
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- 成功/錯誤訊息 -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- 計算表單 -->
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <!-- 隱藏欄位用來傳遞 FromCurrency -->
        <input type="hidden" asp-for="FromCurrency" />
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0"><i class="fas fa-calculator"></i> 匯率計算</h4>
                    </div>
                    <div class="card-body">
                        <!-- 計算方式選擇 -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <label class="form-label fw-bold">計算方式:</label>
                                <div class="btn-group w-100" role="group">
                                    <input type="radio" class="btn-check" name="IsTwdToForeign" id="twdToForeign" value="true" 
                                           @(Model.IsTwdToForeign ? "checked" : "") autocomplete="off">
                                    <label class="btn btn-outline-primary" for="twdToForeign">
                                        <i class="fas fa-arrow-right"></i> 台幣 → 外幣
                                    </label>

                                    <input type="radio" class="btn-check" name="IsTwdToForeign" id="foreignToTwd" value="false" 
                                           @(!Model.IsTwdToForeign ? "checked" : "") autocomplete="off">
                                    <label class="btn btn-outline-primary" for="foreignToTwd">
                                        <i class="fas fa-arrow-left"></i> 外幣 → 台幣
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- 金額輸入 -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="Amount" class="form-label fw-bold">
                                    @if (Model.IsTwdToForeign)
                                    {
                                        <text>台幣金額:</text>
                                    }
                                    else
                                    {
                                        <text>外幣金額:</text>
                                    }
                                </label>
                                <div class="input-group">
                                    <input type="number" class="form-control form-control-lg" id="Amount" name="Amount" 
                                           value="@Model.Amount" step="0.01" min="0.01" placeholder="請輸入金額" required>
                                    <span class="input-group-text">
                                        @if (Model.IsTwdToForeign)
                                        {
                                            <text>TWD</text>
                                        }
                                        else
                                        {
                                            <text>@Model.ToCurrency</text>
                                        }
                                    </span>
                                </div>
                                <span asp-validation-for="Amount" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label for="ToCurrency" class="form-label fw-bold">
                                    @if (Model.IsTwdToForeign)
                                    {
                                        <text>兌換為:</text>
                                    }
                                    else
                                    {
                                        <text>來源貨幣:</text>
                                    }
                                </label>
                                <select class="form-select form-select-lg" id="ToCurrency" name="ToCurrency">
                                    @foreach (var option in Model.CurrencyOptions)
                                    {
                                        <option value="@option.Value" selected="@(option.Value == Model.ToCurrency)">
                                            @option.Text
                                        </option>
                                    }
                                </select>
                            </div>
                        </div>

                        <!-- 當前匯率顯示 -->
                        <div class="row mb-3">
                            <div class="col-12">
                                <div class="card @(Model.HasValidRateData ? "border-success" : "border-danger")">
                                    <div class="card-header @(Model.HasValidRateData ? "bg-success" : "bg-danger") text-white">
                                        <h6 class="mb-0">
                                            <i class="fas fa-chart-bar"></i> 
                                            目前 @Model.ToCurrency 匯率資訊
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        @if (Model.HasValidRateData)
                                        {
                                            <div class="row text-center">
                                                <div class="col-6 col-md-3">
                                                    <small class="text-muted">即期買入</small>
                                                    <div class="fw-bold @(Model.CurrentBuyRate > 0 ? "text-primary" : "text-muted")">
                                                        @(Model.CurrentBuyRate > 0 ? Model.CurrentBuyRate.ToString("N6") : "無資料")
                                                    </div>
                                                </div>
                                                <div class="col-6 col-md-3">
                                                    <small class="text-muted">即期賣出</small>
                                                    <div class="fw-bold @(Model.CurrentSellRate > 0 ? "text-success" : "text-muted")">
                                                        @(Model.CurrentSellRate > 0 ? Model.CurrentSellRate.ToString("N6") : "無資料")
                                                    </div>
                                                </div>
                                                <div class="col-6 col-md-3">
                                                    <small class="text-muted">現金買入</small>
                                                    <div class="fw-bold @(Model.CurrentCashBuyRate > 0 ? "text-info" : "text-muted")">
                                                        @(Model.CurrentCashBuyRate > 0 ? Model.CurrentCashBuyRate.ToString("N6") : "無資料")
                                                    </div>
                                                </div>
                                                <div class="col-6 col-md-3">
                                                    <small class="text-muted">現金賣出</small>
                                                    <div class="fw-bold @(Model.CurrentCashSellRate > 0 ? "text-warning" : "text-muted")">
                                                        @(Model.CurrentCashSellRate > 0 ? Model.CurrentCashSellRate.ToString("N6") : "無資料")
                                                    </div>
                                                </div>
                                            </div>
                                            <hr class="my-2">
                                            <div class="text-center">
                                                <small class="text-muted">
                                                    <i class="fas fa-info-circle"></i>
                                                    計算將使用: 
                                                    @if (Model.IsTwdToForeign)
                                                    {
                                                        <span class="fw-bold text-warning">現金賣出匯率</span>
                                                        @if (Model.CurrentCashSellRate == 0)
                                                        {
                                                            <span> (或即期賣出匯率)</span>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <span class="fw-bold text-info">現金買入匯率</span>
                                                        @if (Model.CurrentCashBuyRate == 0)
                                                        {
                                                            <span> (或即期買入匯率)</span>
                                                        }
                                                    }
                                                </small>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="text-center">
                                                <div class="text-danger mb-2">
                                                    <i class="fas fa-exclamation-triangle fa-2x"></i>
                                                </div>
                                                <h6 class="text-danger">匯率資料不完整或缺失</h6>
                                                <p class="text-muted mb-0">
                                                    目前選擇的貨幣 (@Model.ToCurrency) 缺少有效的匯率資料，
                                                    請點擊「更新匯率」按鈕更新最新資料後再進行計算。
                                                </p>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- 操作按鈕 -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                                    <button type="submit" asp-page-handler="Calculate" class="btn btn-success btn-lg me-md-2" 
                                            id="calculateBtn" disabled="@(!Model.HasValidRateData)">
                                        <i class="fas fa-calculator"></i> 計算匯率
                                    </button>
                                    <button type="submit" asp-page-handler="Clear" class="btn btn-secondary btn-lg me-md-2" formnovalidate>
                                        <i class="fas fa-eraser"></i> 清除
                                    </button>
                                    <button type="submit" asp-page-handler="UpdateRates" class="btn btn-warning btn-lg" formnovalidate>
                                        <i class="fas fa-sync-alt"></i> 更新匯率
                                    </button>
                                </div>
                                @if (!Model.HasValidRateData)
                                {
                                    <div class="text-center mt-2">
                                        <small class="text-danger">
                                            <i class="fas fa-exclamation-triangle"></i>
                                            計算功能已停用，請先更新匯率資料
                                        </small>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- 計算結果 -->
                        @if (Model.Result > 0 && !Model.IsError)
                        {
                            <div class="alert alert-success" role="alert">
                                <h5 class="alert-heading">
                                    <i class="fas fa-check-circle"></i> 計算結果
                                </h5>
                                <hr>
                                <div class="row">
                                    <div class="col-md-6">
                                        <strong>兌換金額:</strong>
                                        <h4 class="text-success">
                                            @if (Model.IsTwdToForeign)
                                            {
                                                <text>@Model.Result.ToString("N6") @Model.ToCurrency</text>
                                            }
                                            else
                                            {
                                                <text>@Model.Result.ToString("N2") TWD</text>
                                            }
                                        </h4>
                                    </div>
                                    <div class="col-md-6">
                                        <strong>使用匯率:</strong>
                                        <h5 class="text-info">@Model.UsedExchangeRate.ToString("N6")</h5>
                                    </div>
                                </div>
                                @if (!string.IsNullOrEmpty(Model.CalculationDetails))
                                {
                                    <hr>
                                    <small class="text-muted">
                                        <i class="fas fa-info-circle"></i> 計算詳細: @Model.CalculationDetails
                                    </small>
                                }
                            </div>
                        }

                        @if (Model.IsError)
                        {
                            <div class="alert alert-danger" role="alert">
                                <h5 class="alert-heading">
                                    <i class="fas fa-exclamation-triangle"></i> 計算錯誤
                                </h5>
                                <p class="mb-0">@Model.ErrorMessage</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </form>

    <!-- 免責聲明 -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="alert alert-info" role="alert">
                <i class="fas fa-info-circle"></i>
                ⚠️ 提醒: 匯率資料僅供參考，實際匯率請以銀行公告為準
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // 當計算方式改變時，自動清除結果並更新 FromCurrency
        $('input[name="IsTwdToForeign"]').change(function() {
            $('#Amount').val('');
            updateFromCurrency();
            updateRateDisplay();
        });

        // 當目標貨幣改變時，也要更新 FromCurrency 和匯率顯示
        $('#ToCurrency').change(function() {
            updateFromCurrency();
            updateRateDisplay();
        });

        // 更新 FromCurrency 隱藏欄位
        function updateFromCurrency() {
            var isTwdToForeign = $('input[name="IsTwdToForeign"]:checked').val() === 'true';
            var toCurrency = $('#ToCurrency').val();
            
            if (isTwdToForeign) {
                $('input[name="FromCurrency"]').val('TWD');
            } else {
                $('input[name="FromCurrency"]').val(toCurrency);
            }
        }

        // 更新匯率顯示 (不重新載入頁面)
        function updateRateDisplay() {
            var isTwdToForeign = $('input[name="IsTwdToForeign"]:checked').val() === 'true';
            var toCurrency = $('#ToCurrency').val();
            
            // 使用 AJAX 獲取匯率資料
            $.get(window.location.pathname, {
                IsTwdToForeign: isTwdToForeign,
                ToCurrency: toCurrency,
                Amount: $('#Amount').val() || 0
            }).done(function(data) {
                // 解析返回的 HTML 並更新匯率顯示區域
                var $newContent = $(data);
                var $rateCard = $newContent.find('.card.border-success, .card.border-danger').first();
                var $calculateBtn = $newContent.find('#calculateBtn');
                var $warningMsg = $newContent.find('.text-danger:contains("計算功能已停用")').parent();
                
                if ($rateCard.length) {
                    $('.card.border-success, .card.border-danger').replaceWith($rateCard);
                }
                
                if ($calculateBtn.length) {
                    $('#calculateBtn').prop('disabled', $calculateBtn.prop('disabled'));
                }
                
                // 更新或移除警告訊息
                var $currentWarning = $('.text-danger:contains("計算功能已停用")').parent();
                if ($warningMsg.length) {
                    if ($currentWarning.length) {
                        $currentWarning.replaceWith($warningMsg);
                    } else {
                        $('#calculateBtn').closest('.col-12').append($warningMsg);
                    }
                } else {
                    $currentWarning.remove();
                }
            }).fail(function() {
                console.log('無法更新匯率顯示');
            });
        }

        // 頁面載入時初始化 FromCurrency
        $(document).ready(function() {
            updateFromCurrency();
        });

        // 數字輸入格式化
        $('#Amount').on('input', function() {
            var value = $(this).val();
            if (value && !isNaN(value)) {
                $(this).removeClass('is-invalid');
            }
        });

        // 表單提交時的載入效果
        $('form').submit(function() {
            var submitBtn = $(this).find('button[type="submit"]:focus');
            if (submitBtn.length) {
                submitBtn.prop('disabled', true)
                       .html('<span class="spinner-border spinner-border-sm" role="status"></span> 處理中...');
            }
        });
    </script>
}
